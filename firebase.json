{
    "functions": {
        "source": "functions"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8089
        },
        "hosting": {
            "port": 5005
        },
        "auth": {
            "port": 9099
        },
        "ui": {
            "enabled": true,
            "port": 4500
        }
    }
}